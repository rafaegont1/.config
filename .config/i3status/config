# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
  output_format = i3bar
  colors = true
  interval = 5
  markup = "pango"
  color_good = "#5FD7A7"
  color_degraded = "#F3E430"
  color_bad = "#FF0000"
}

order += "memory"
order += "cpu_usage"
order += "disk /"
order += "ethernet _first_"
order += "volume master"
order += "tztime local"

memory {
  format = "  %used / %total (%percentage_used)"
  threshold_degraded = "25%"
  threshold_critical = "10%"
}

cpu_usage {
  format = "  %usage"
  degraded_threshold = 75
  max_threshold = 90
}

disk "/" {
  format = "  %avail"
  low_threshold = 25
}

ethernet _first_ {
  format_up = "󰈁 %ip"
  format_down = "󰈂 no IPv4"
}

volume master {
  format = "<span color='#4FB8CC'>󱄠 %volume</span>"
  format_muted = "󰝟 %volume"
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

tztime local {
  format = "  %d-%m-%Y (%a) %H:%M:%S"
}
